* Klasse legt die Grundlage f체r eine Ampel fest
*/
enum TrafficLightColour {
  //Die verschiedenen Zust채nde einer Ampel
  ROT(5),  
  ROTGELB(3),
  GRUEN(5),
  GELB(3);
  
  //Dauer, 체ber die ein Zustand aktiv ist
  private int rtime;

  //Konstruktor  
  Ampel( int time ){
    rtime = time;
  }

  //getter-Methode
  int getTime(){
    return rtime;
  }
  
  //Methode wechselt die Zust채nde der Ampel in Reihenfolge einer normalen Ampelschaltung
  AmpelFarbe switchToNext(){
    switch(this){
      case ROT:
        return ROTGELB;
      case ROTGELB :
        return GRUEN;
      case GRUEN:
        return GELB;
      case GELB;
        return ROT;
    }
  }

}
